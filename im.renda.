  setlocale(LC_ALL,"");;
  float n=0, custo;
  printf("digite seu sal√°rio?");
  scanf(" %f",&n);

  if (n<=1903.98){
    printf("Imposto de renda = %f",n);
  }

  else if (n>=1903.99 && n<=2826.65){
    custo=n*7.5-142.80;
